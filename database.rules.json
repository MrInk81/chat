{
  "rules": {
    ".read": true,
    "rooms": {
      "$room": {
        "messages": {
          ".indexOn": [
            "ts",
            "uid",
            "replyTo"
          ],
          "$msg": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['uid','name','role','text','ts']) && newData.child('text').isString() && newData.child('text').val().length <= 2000"
          }
        }
      }
    },
    "status": {
      "$uid": {
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "inbox": {
      "$uid": {
        ".read": "auth!=null && auth.uid==$uid",
        ".write": "auth!=null"
      }
    },
    "mutes": {
      "$uid": {
        ".read": "auth!=null && auth.uid==$uid",
        ".write": "auth!=null"
      }
    },
    "nicks": {
      ".read": true,
      "$nick": {
        ".write": "auth!=null"
      }
    },
    "pm": {
      "$thread": {
        ".read": "auth!=null && (data.child('a').val()==auth.uid || data.child('b').val()==auth.uid)",
        ".write": "auth!=null"
      }
    }
  }
}